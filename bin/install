#!/bin/bash

#Unpack .tar.gz

source $OPENSHIFT_CARTRIDGE_SDK_BASH
client_result "installing cutadapt....`date`"
client_result "`whoami`"
client_result "`pwd`"
#Descomprimimos aqui
#tar -xvzf versions/cython-*/Cython-*
#mv Cython-0.22.1 cython-install
#python cython-install/setup.py install >cythonInstall.txt
easy_install cython 
tar -xvzf versions/cutadapt-*/cutadapt-*
mv cutadapt-* cutadapt-install
#Compilamos cutadapt???
#Necesitamos dependencias python-devel y libxslt-devel
python cutadapt-install/setup.py build > logBuild.txt
python cutadapt-install/setup.py install >logInstall.txt
client_result "install complete....`date`"

